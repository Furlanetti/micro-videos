{
  "compilerOptions": {
    "target": "es2017",
    "baseUrl": "./src",
    "module": "commonjs",
    "incremental": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/"
  ]
}
